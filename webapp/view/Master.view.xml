<mvc:View
	controllerName="be.ap.project.Shipments.controller.Master"
	xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">
    
    <f:DynamicPage id="masterPage"
                   preserveHeaderStateOnScroll="true"
				   toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title 
                           id="masterPageTitle"
				           text="{masterView>/title}"
				           level="H2"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
			<Table id="list"
				   items="{
						path: '/ShipmentSet',
                        sorter: {
                            path: 'IvTknum',
                            descending: true
                        },
                        groupHeaderFactory: '.createGroupHeader'
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto"
                   busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
				selectionChange=".onSelectionChange">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<SearchField id="searchField" 
                                     placeholder="Search by planning point"  
                                     tooltip="{i18n>masterSearchTooltip}" 
                                     search=".onSearch" 
                                     width="17.5rem"
                                     enableSuggestions="true" 
                                     suggest="onSuggest"
                                     suggestionItems="{
                                        path: 'masterView>/Tplst'
                                    }">                                                         
                            <SuggestionItem text="{masterView>Tplst}" key="{masterView>Tplst}"/>
                        </SearchField>
						    <OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press=".onOpenViewSettings"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Shipment" />
					</Column>
					<Column	hAlign="End">
						<Text text="Date" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press=".onSelectionChange">
						<cells>
							<ObjectIdentifier title="{IvTknum}" text="{IsTvtkt/Bezei} ({IsHeader/Shtyp})" />
							<ObjectNumber
									number="{
                                        path:'IsInplanning/PlannedDate',
                                        formatter: '.formatter.toDate' 
                                        }"
									/> 
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
    </f:DynamicPage>

